# --- BLOQUE INTEGRADO DE LIMPIEZA Y TRANSFORMACIÓN DE DATOS ---

library(tidyverse)
library(stringr)

# 1. LIMPIEZA, UNIFICACIÓN Y TRATAMIENTO DE VALORES ESPECIALES
df_clean <- df_vitacart %>%
  mutate(
    # A. Unificación de Ciudades (bc007)
    bc007_ciudad_zona = case_when(
      str_detect(str_to_lower(bc007_ciudad_zona), "val") ~ "Valencia",
      str_detect(str_to_lower(bc007_ciudad_zona), "mad") ~ "Madrid",
      str_detect(str_to_lower(bc007_ciudad_zona), "bar|bcn|barna") ~ "Barcelona",
      TRUE ~ str_to_title(bc007_ciudad_zona)
    ),

    # B. Unificación de Categorías (bc017)
    bc017_categoria_principal = str_to_title(bc017_categoria_principal),
    bc017_categoria_principal = case_when(
      bc017_categoria_principal %in% c("Bebes", "Bebés") ~ "Bebés",
      bc017_categoria_principal == "Alimentacion" ~ "Alimentación",
      str_detect(bc017_categoria_principal, "Mascot") ~ "Mascotas",
      str_detect(bc017_categoria_principal, "Cuidado") ~ "Cuidado Personal",
      TRUE ~ bc017_categoria_principal
    ),

    # C. Estandarización de nulos en demografía (bc004, bc005, bc006)
    bc004_estado_civil = if_else(is.na(bc004_estado_civil) | bc004_estado_civil == "<no informado>",
      "Desconocido", bc004_estado_civil
    ),
    bc005_nivel_educativo = if_else(is.na(bc005_nivel_educativo) | bc005_nivel_educativo == "<no informado>",
      "Desconocido", bc005_nivel_educativo
    ),
    bc006_segmento_socioeconomico = if_else(is.na(bc006_segmento_socioeconomico) | bc006_segmento_socioeconomico == "<no informado>",
      "Desconocido", bc006_segmento_socioeconomico
    ),

    # D. Tratamiento de valores erróneos en Días desde última compra (bc023)
    # Convertimos negativos y el código 999 a NA para imputarlos luego
    bc023_dias_desde_ultima_compra = case_when(
      bc023_dias_desde_ultima_compra < 0 ~ NA_real_,
      bc023_dias_desde_ultima_compra == 999 ~ NA_real_,
      TRUE ~ bc023_dias_desde_ultima_compra
    )
  ) %>%
  # 2. IMPUTACIÓN DE VALORES FALTANTES
  mutate(
    # Imputación de bc021 (Método de pago)
    bc021_metodo_pago = replace_na(bc021_metodo_pago, "Desconocido"),
  ) %>%
  # 3. ELIMINACIÓN DE COLUMNAS IRRELEVANTES (Sin varianza o sin uso)
  select(-bc010_tipo_cliente, -bc011_plan, -bc022_renovaciones_suscripcion) %>%
  # 4. CONVERSIÓN DE TIPOS DE DATOS (Factores)
  mutate(
    # Convertimos la banda RFM a factor específicamente
    bc012_banda_valor_rfm = as.factor(bc012_banda_valor_rfm),
    # Convertimos todas las demás columnas de texto a factores
    across(where(is.character), as.factor)
  )

# --- VERIFICACIÓN FINAL DEL DATASET ---

print(paste("Dimensiones finales:", nrow(df_clean), "filas y", ncol(df_clean), "columnas"))
print(paste("Suma total de NAs:", sum(is.na(df_clean))))

print("--- Resumen de Factores Clave ---")
summary(df_clean %>% select(bc007_ciudad_zona, bc017_categoria_principal, bc030_estado_cliente, bc012_banda_valor_rfm))

